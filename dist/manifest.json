{
  "manifest_version": 3,
  "name": "LearnSphere: The Interactive PDF Scholar",
  "version": "1.0.0",
  "description": "Transform static PDF documents into dynamic, interactive learning environments with AI-powered assistance.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "file://*/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*.pdf",
        "file://*/*.pdf",
        "https://*/*.PDF",
        "file://*/*.PDF",
        "file://*/*",
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LearnSphere"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.js", "sidebar.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
